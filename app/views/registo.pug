extends layout 

block content   
    div(id="signup_modal" class="my-modal")
        .w3-container.w3-margin.w3-border 
            .w3-container.w3-blue 
                h3 Introduza as suas credenciais: 
            form.w3-container(action='/users/signup' method='POST')
                label Nome: 
                input.w3-input(type='text' name="name")
                label Nivel:
                select.w3-select(name="niveis") 
                    option(value="Administrador") Administrador
                    option(value="Produtor") Produtor
                label Email: 
                input.w3-input(type='email' name="email")
                label Password: 
                input.w3-input(type='password' name="password")
                input.w3-btn.w3-blue(type='submit' value="Enviar") 